/* pages/admin/order-manage/order-manage.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}

.page-header {
  background-color: white;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 状态标签 */
.status-tabs {
  white-space: nowrap;
  background-color: white;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.status-tab {
  display: inline-block;
  padding: 12rpx 30rpx;
  margin-right: 20rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
}

.status-tab.active {
  background-color: #ff6b6b;
  color: white;
}

/* 订单列表 */
.loading, .empty {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 20rpx;
}

.order-list {
  padding: 0 30rpx;
}

.order-item {
  background-color: white;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 30rpx;
  background-color: #fafafa;
  border-bottom: 1rpx solid #eee;
}

.order-no {
  font-size: 26rpx;
  color: #666;
}

.order-status {
  font-size: 26rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.status-1 { background-color: #fff3e0; color: #ff9800; }
.status-2 { background-color: #e3f2fd; color: #2196f3; }
.status-3 { background-color: #f3e5f5; color: #9c27b0; }
.status-4 { background-color: #e8f5e9; color: #4caf50; }
.status-5 { background-color: #ffebee; color: #f44336; }

.order-body {
  padding: 25rpx 30rpx;
}

.order-info {
  margin-bottom: 20rpx;
}

.info-item {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.order-items {
  background-color: #f9f9f9;
  border-radius: 10rpx;
  padding: 15rpx;
}

.dish-row {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  padding: 8rpx 0;
  color: #333;
}

.dish-name {
  flex: 1;
}

.dish-info {
  color: #666;
}

.order-footer {
  display: flex;
  justify-content: flex-end;
  gap: 15rpx;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
}

.btn-detail, .btn-process {
  font-size: 26rpx;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  border: none;
}

.btn-detail {
  background-color: #f5f5f5;
  color: #666;
}

.btn-process {
  background-color: #ff6b6b;
  color: white;
}

