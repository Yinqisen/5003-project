/* pages/admin/statistics/statistics.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}

.page-header {
  background-color: white;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.btn-refresh {
  font-size: 26rpx;
  padding: 10rpx 25rpx;
  border-radius: 30rpx;
  background-color: #f5f5f5;
  color: #666;
  border: none;
}

.loading, .empty {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 20rpx;
}

.stats-content {
  padding: 30rpx;
}

.stats-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.stat-card {
  flex: 1;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  border-radius: 15rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 15rpx rgba(255, 107, 107, 0.3);
}

.stat-card.full {
  width: 100%;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.section {
  background-color: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-top: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-count {
  font-size: 24rpx;
  color: #999;
}

.hot-dishes {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.hot-dish-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}

.rank {
  width: 50rpx;
  height: 50rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.dish-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.dish-price {
  font-size: 24rpx;
  color: #ff6b6b;
}

.sales-count {
  font-size: 24rpx;
  color: #666;
  background-color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.empty-tip {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 26rpx;
}

/* 用户列表 */
.user-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.user-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 25rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.user-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.user-time {
  font-size: 22rpx;
  color: #999;
}

.user-phone {
  font-size: 24rpx;
  color: #666;
}

/* 订单列表 */
.order-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.order-item {
  padding: 25rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.order-no {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.status-1 { background-color: #fff3e0; color: #ff9800; }
.status-2 { background-color: #e3f2fd; color: #2196f3; }
.status-3 { background-color: #f3e5f5; color: #9c27b0; }
.status-4 { background-color: #e8f5e9; color: #4caf50; }
.status-5 { background-color: #ffebee; color: #f44336; }

.order-body {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.order-user {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.order-price {
  font-size: 30rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.order-time {
  font-size: 22rpx;
  color: #999;
}

/* 快速信息 */
.quick-info {
  background-color: #f9f9f9;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.quick-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
}

.quick-label {
  color: #999;
}

.quick-value {
  color: #333;
  font-weight: bold;
}

/* 查看全部按钮 */
.btn-view-all {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  color: white;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 4rpx 15rpx rgba(255, 107, 107, 0.3);
}

