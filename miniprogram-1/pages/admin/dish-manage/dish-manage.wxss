/* pages/admin/dish-manage/dish-manage.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}

.page-header {
  background-color: white;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.btn-add {
  background-color: #ff6b6b;
  color: white;
  border-radius: 40rpx;
  font-size: 28rpx;
  padding: 15rpx 30rpx;
  border: none;
}

/* 分类标签 */
.category-tabs {
  white-space: nowrap;
  background-color: white;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.category-tab {
  display: inline-block;
  padding: 12rpx 30rpx;
  margin-right: 20rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
}

.category-tab.active {
  background-color: #ff6b6b;
  color: white;
}

/* 菜品列表 */
.loading, .empty {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
}

.dish-list {
  padding: 0 30rpx;
}

.dish-item {
  background-color: white;
  border-radius: 15rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
}

.dish-header {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.dish-image-box {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #ffeaa7 0%, #fdcb6e 100%);
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  overflow: hidden;
}

.dish-placeholder-text {
  font-size: 22rpx;
  color: #999;
  text-align: center;
}

.dish-thumb {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.dish-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dish-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.status-badge {
  display: inline-block;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-weight: normal;
  margin-left: 10rpx;
}

.status-badge.active {
  background-color: #e8f5e9;
  color: #4caf50;
}

.status-badge.inactive {
  background-color: #ffebee;
  color: #f44336;
}

.dish-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.dish-meta {
  display: flex;
  gap: 15rpx;
  font-size: 22rpx;
  color: #666;
  flex-wrap: wrap;
}

.price {
  color: #ff6b6b;
  font-size: 26rpx;
  font-weight: bold;
}

.dish-actions {
  display: flex;
  gap: 15rpx;
  justify-content: flex-end;
  padding-top: 15rpx;
  border-top: 1rpx solid #f0f0f0;
}

.btn-action {
  font-size: 24rpx;
  padding: 10rpx 25rpx;
  border-radius: 30rpx;
  background-color: #f5f5f5;
  color: #666;
  border: none;
  flex: 1;
}

.btn-action.primary {
  background-color: #2196f3;
  color: white;
}

.btn-action.danger {
  background-color: #f44336;
  color: white;
}

/* 编辑弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 90%;
  max-height: 80vh;
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background-color: #fafafa;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.btn-close {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
}

.form-item {
  margin-bottom: 25rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 25rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-input.picker {
  display: flex;
  align-items: center;
  color: #333;
}

.form-textarea {
  width: 100%;
  min-height: 150rpx;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 25rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
  background-color: #fafafa;
}

.btn-modal {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  text-align: center;
  border: none;
}

.btn-modal.cancel {
  background-color: #f5f5f5;
  color: #666;
}

.btn-modal.confirm {
  background-color: #ff6b6b;
  color: white;
  font-weight: bold;
}

/* 图片上传 */
.image-upload-area {
  margin-top: 15rpx;
}

.upload-box {
  width: 100%;
  height: 300rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border-radius: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #d0d0d0;
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 15rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.upload-tip {
  font-size: 22rpx;
  color: #999;
}

.image-preview {
  position: relative;
  width: 100%;
  height: 300rpx;
  border-radius: 15rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.image-actions {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  background: linear-gradient(to top, rgba(0,0,0,0.6) 0%, transparent 100%);
  padding: 20rpx;
  gap: 15rpx;
}

.btn-change, .btn-delete-img {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 30rpx;
  font-size: 26rpx;
  background-color: rgba(255, 255, 255, 0.9);
}

.btn-change {
  color: #2196f3;
}

.btn-delete-img {
  color: #f44336;
}

