/* pages/my/my.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 用户信息 */
.user-section {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  padding: 60rpx 30rpx 80rpx;
}

.user-header {
  display: flex;
  align-items: center;
  gap: 30rpx;
  justify-content: flex-start;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: white;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.avatar .avatar-image {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  font-size: 50rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.admin-badge {
  font-size: 22rpx;
  background-color: rgba(255, 215, 0, 0.9);
  color: #333;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-weight: normal;
}

.phone {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.edit-btn {
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
  background-color: rgba(255, 255, 255, 0.3);
  color: white;
  font-size: 28rpx;
  border: 2rpx solid white;
}

/* 菜单列表 */
.menu-section {
  margin-top: -40rpx;
  padding: 0 30rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 35rpx 30rpx;
  background-color: white;
  margin-bottom: 2rpx;
  border-radius: 10rpx;
}

.menu-item:first-child {
  border-radius: 10rpx 10rpx 0 0;
}

.menu-item:last-child {
  border-radius: 0 0 10rpx 10rpx;
  margin-bottom: 20rpx;
}

.menu-icon {
  font-size: 48rpx;
  margin-right: 25rpx;
}

.menu-name {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.menu-arrow {
  font-size: 48rpx;
  color: #ccc;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 40rpx 0;
  font-size: 24rpx;
  color: #999;
}

