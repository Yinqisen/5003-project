/* pages/order/order.wxss */
.container {
  padding-bottom: 20rpx;
}

/* 状态筛选 */
.status-filter {
  background-color: white;
  padding: 20rpx 0;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.status-scroll {
  white-space: nowrap;
  padding: 0 20rpx;
}

.status-item {
  display: inline-block;
  padding: 10rpx 30rpx;
  margin-right: 20rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
  transition: all 0.3s;
}

.status-item.active {
  background-color: #ff6b6b;
  color: white;
  font-weight: bold;
}

/* 订单列表 */
.order-list {
  padding: 20rpx;
}

.loading, .empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty-icon {
  display: block;
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.order-card {
  background-color: white;
  border-radius: 15rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.06);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-no {
  font-size: 28rpx;
  color: #666;
}

.order-status {
  font-size: 28rpx;
  font-weight: bold;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.status-1 {
  background-color: #fff3e0;
  color: #ff9800;
}

.status-2 {
  background-color: #e3f2fd;
  color: #2196f3;
}

.status-3 {
  background-color: #e8f5e9;
  color: #4caf50;
}

.status-4 {
  background-color: #f3e5f5;
  color: #9c27b0;
}

.status-5 {
  background-color: #fce4ec;
  color: #e91e63;
}

.order-items {
  margin-bottom: 20rpx;
}

.order-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  font-size: 28rpx;
}

.dish-name {
  flex: 1;
  color: #333;
}

.dish-quantity {
  color: #999;
  margin: 0 20rpx;
}

.dish-price {
  color: #ff6b6b;
  font-weight: bold;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-total {
  display: flex;
  align-items: baseline;
}

.order-total .label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.order-total .price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.order-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 20rpx;
}

.btn-cancel {
  padding: 15rpx 40rpx;
  border-radius: 30rpx;
  background-color: #f5f5f5;
  color: #666;
  font-size: 28rpx;
  border: none;
}

.btn-pay {
  padding: 15rpx 40rpx;
  border-radius: 30rpx;
  background-color: #ff6b6b;
  color: white;
  font-size: 28rpx;
  border: none;
}

.loading-more, .no-more {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 24rpx;
}

