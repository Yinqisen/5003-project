<!--pages/order/order.wxml-->
<view class="container">
  <!-- 状态筛选 -->
  <view class="status-filter">
    <scroll-view scroll-x class="status-scroll">
      <view 
        wx:for="{{statusList}}" 
        wx:key="value" 
        class="status-item {{currentStatus === item.value ? 'active' : ''}}"
        data-status="{{item.value}}"
        bindtap="handleStatusChange"
      >
        {{item.label}}
      </view>
    </scroll-view>
  </view>

  <!-- 订单列表 -->
  <view class="order-list">
    <view wx:if="{{loading && orders.length === 0}}" class="loading">
      <text>加载中...</text>
    </view>

    <view wx:elif="{{orders.length === 0}}" class="empty-state">
      <text class="empty-text">暂无订单</text>
    </view>

    <view wx:else>
      <view 
        wx:for="{{orders}}" 
        wx:key="id" 
        class="order-card"
        bindtap="handleViewDetail"
        data-id="{{item.id}}"
      >
        <view class="order-header">
          <view class="order-no">订单号：{{item.order_no}}</view>
          <view class="order-status status-{{item.status}}">
            <text wx:if="{{item.status === 1}}">待支付</text>
            <text wx:elif="{{item.status === 2}}">已支付</text>
            <text wx:elif="{{item.status === 3}}">配送中</text>
            <text wx:elif="{{item.status === 4}}">已完成</text>
            <text wx:elif="{{item.status === 5}}">已取消</text>
          </view>
        </view>

        <view class="order-items">
          <view 
            wx:for="{{item.items}}" 
            wx:key="id" 
            wx:for-item="dish"
            class="order-item"
          >
            <text class="dish-name">{{dish.dish_name}}</text>
            <text class="dish-quantity">×{{dish.quantity}}</text>
            <text class="dish-price">¥{{dish.dish_price}}</text>
          </view>
        </view>

        <view class="order-footer">
          <view class="order-time">{{item.created_at}}</view>
          <view class="order-total">
            <text class="label">合计：</text>
            <text class="price">¥{{item.total_price}}</text>
          </view>
        </view>

        <view class="order-actions" wx:if="{{item.status === 1 || item.status === 2}}">
          <button 
            wx:if="{{item.status === 1 || item.status === 2}}"
            class="btn-cancel" 
            data-id="{{item.id}}"
            catchtap="handleCancelOrder"
          >
            取消订单
          </button>
          <button 
            wx:if="{{item.status === 1}}"
            class="btn-pay"
          >
            去支付
          </button>
        </view>
      </view>

      <view wx:if="{{loading}}" class="loading-more">
        <text>加载中...</text>
      </view>

      <view wx:if="{{!hasMore && orders.length > 0}}" class="no-more">
        <text>没有更多了</text>
      </view>
    </view>
  </view>
</view>

